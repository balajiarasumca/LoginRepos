<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

 <ImageView
     android:id="@+id/img_git_icon"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:layout_marginLeft="5dp"
     android:src="@mipmap/item_icon"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_toRightOf="@+id/img_git_icon"
    android:orientation="vertical">
    <TextView
        android:layout_toRightOf="@+id/img_git_icon"
        android:id="@+id/txt_git_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_weight="1"/>
    <TextView
        android:layout_toRightOf="@+id/img_git_icon"
        android:id="@+id/txt_git_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:textSize="17sp"
        android:textStyle="italic"
        android:singleLine="true"
        android:layout_below="@+id/txt_git_title"
        android:layout_alignBaseline="@+id/img_git_icon"
        android:layout_weight="1"/>
</LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>



